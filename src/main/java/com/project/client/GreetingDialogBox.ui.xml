<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  .vertical-panel {
    margin: 5px;
  }
  
  .close-button {
    margin: 15px 6px 6px;
  }
  </ui:style>

  <g:DialogBox ui:field="dialogBox" animationEnabled="true" width="400px">
    <g:VerticalPanel addStyleNames="{style.vertical-panel}">
      <g:HTML>
        <b>Sending name to the server:</b>
      </g:HTML>
      <g:Label ui:field="textToServerLabel" />
      <g:HTML>
        <br />
        <b>Server replies:</b>
      </g:HTML>
      <g:HTML ui:field="serverResponseLabel" />
      <g:cell horizontalAlignment="ALIGN_RIGHT">
        <g:Button ui:field="closeButton" addStyleNames="{style.close-button}">
          Close
        </g:Button>
      </g:cell>
    </g:VerticalPanel>
  </g:DialogBox>
</ui:UiBinder> 